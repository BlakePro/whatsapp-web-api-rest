{
  "name": "whatsapp-web-api-rest",
  "version": "1.0.0",
  "description": "whatsapp-web-api-rest is an easy-to-use REST API wrapper for Baileys - Lightweight WhatsApp Web API built with NestJS. It allows you to interact with WhatsApp using endpoints to enable message sending, simulate actions, fetch contacts, and more.",
  "author": "Cristian Yosafat Hern√°ndez Ruiz",
  "keywords": [
    "whatsapp",
    "whatsapp API",
    "nestjs"
  ],
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/app.main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "commit": "sh commit.sh"
  },
  "dependencies": {
    "@fastify/static": "7.0.4",
    "@hapi/boom": "^10.0.1",
    "@nestjs/common": "^10.4.3",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.3",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/platform-fastify": "^10.4.3",
    "@whiskeysockets/baileys": "^6.7.7",
    "fastify": "^5.0.0",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/swagger": "^7.4.2"
  }
}